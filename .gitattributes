# Auto detect text files and perform LF normalization
* text=auto

# Source files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.txt text eol=lf
LICENSE text eol=lf
README text eol=lf

# Exclude files from Git exports
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
